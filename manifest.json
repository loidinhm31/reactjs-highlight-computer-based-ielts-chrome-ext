{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Practice Highlight For IELTS",
  "description": "Extension for candidates acquainted with the highlight text functions in the IELTS exam",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "action": {
    "default_popup": "js/index.html",
    "default_title": "Practice Highlight For IELTS"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/inject.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "management",
    "storage"
  ],
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Toggle Extension On/ Off"
    },
    "control-player": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "Control On/ Off Player"
    }
  }
}
